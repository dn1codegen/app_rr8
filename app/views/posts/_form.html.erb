<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-input #{'error' if post.errors[:title].any?}", placeholder: "Enter post title" %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-input form-textarea #{'error' if post.errors[:body].any?}", placeholder: "Write your post content here..." %>
  </div>

  <div class="form-actions" style="display: flex; gap: var(--spacing-md); align-items: center;">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", posts_path, class: "btn btn-outline" %>
  </div>
<% end %>
